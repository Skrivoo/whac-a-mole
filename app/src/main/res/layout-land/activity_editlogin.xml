<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/editDataText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/hearth_blues"
        android:text="@string/modify_data"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@id/newNameEdittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newNameEdittext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/new_name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/newAvatarEdittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editDataText" />

    <EditText
        android:id="@+id/newAvatarEdittext"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="@string/url_of_new_avatar"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/saveDataButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newNameEdittext"/>

    <Button
        android:id="@+id/saveDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_data"
        app:layout_constraintBottom_toTopOf="@id/resetScoresButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/newAvatarEdittext"/>

    <Button
        android:id="@+id/resetScoresButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_scores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/saveDataButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>